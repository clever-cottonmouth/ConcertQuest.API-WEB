@model ConcertBooking.WebHost.ViewModels.HomePageViewModels.HomeConcertDetailsViewModel


<div class="row m-3">

    <div class="col-6">
        <img src="@Model.ConcertImage" alt="Concert Image" style="width: 500px; height: 500px;" />
    </div>
    <div class="col-6">
        <div>Concert Id: @Model.ConcertId</div>
        <div>Concert Image: @Model.ConcertImage</div>
        <div>Concert Description: @Model.Description</div>
        <div>Venue Name: @Model.VenueName</div>
        <div>Venue Address: @Model.VenueAddress</div>
        <div>Venue Date & Time: @Model.ConcertDateTime.ToString("MM ddd yyyy hh:mm")</div>
        <div class="mt-2"><img src="@Model.ArtistImage" class="rounded-circle img-fluid" style="height:150px;width:150px"></div>
        <div>Artist Name: @Model.ArtistName</div> 
        <div class="mt-3">   <a asp-action="AvailabeTickets" asp-route-id="@Model.ConcertId" class="btn btn-primary">See Available Tickets</a></div>

    </div>
        
    
</div>








